{
  "src_folders": "dist/tests",
  "output_folder": "nightwatch_chrome",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",


  "selenium": {
    "start_process": true,
    "server_path": "./lib/drivers/selenium-server-standalone-3.141.59.jar",
    "log_path": "",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./lib/drivers/chromedriver.exe",
      "webdriver.gecko.driver": "./lib/drivers/geckodriver.exe",
      "webdriver.edge.driver": "./lib/drivers/msedgedriver.exe"
    }
  },

  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "suppressWebdriverErrors": true,
      "screenshots": {
        "enabled": true,
        "path": ""
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true
      }
    },

    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "w3c": false,
          "args": ["--no-sandbox", "headless"]
        }
      }
    },

    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "marionette": true,
        "moz:firefoxOptions": {
          "args": ["--no-sandbox", "--headless"]
        }
      }
    },

    "edge": {
      "desiredCapabilities": {
        "browserName": "MicrosoftEdge",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "edgeOptions": {
          "w3c": false,
          "args": ["--no-sandbox", "--headless"]
        }
      }
    }
  }
}
